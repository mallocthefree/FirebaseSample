{
    "Logging": {
        "LogLevel": {
            "Default": "Trace",
            "System": "Debug",
            "Microsoft": "Debug"
        }
    },
    "NLog": {
        "throwConfigExceptions": true,
        "targets": {
            "logfile": {
                "type": "File",
                "fileName": "./unittests-${shortdate}.log"
            },
            "errorFile": {
                "type": "File",
                "fileName": "./unittests-errors-${shortdate}.log"
            },
            "logconsole": {
                "type": "Console"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "logconsole"
            },
            {
                "logger": "*",
                "minLevel": "Debug",
                "writeTo": "logfile"
            },
            {
                "logger": "*",
                "minLevel": "Error",
                "writeTo": "errorFile"
            }
        ]
    },
    "DefaultConnection": "UnitTestConnection",
    "UnitTestConnection": {
        "Comment": "No Comment",
        "CommandTimeout": "90",
        "ConnectionString": "User ID=unit_tester; Password=TestingTesting123!; Server=localhost; Port=3306; Database=security; Pooling=true; Timeout=30"
    }
}
